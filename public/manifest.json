{
    "manifest_version": 3,
    "name": "Tabwizard",
    "icons":{
        "16": "tabwizard-high-resolution-logo-transparent.png",
        "32": "tabwizard-high-resolution-logo-transparent.png",
        "48": "tabwizard-high-resolution-logo-transparent.png",
        "128": "tabwizard-high-resolution-logo-transparent.png"
    },
    "description": "Seamlessly preview, open, and manage tabs with intuitive hover previews and click-to-open functionality.",
    "version": "1.0.0",
    "action":{
        "default_popup": "popup.html"
    },
    "options_page": "index.html",
    "background":{
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions":[
        "tabs",
        "activeTab",
        "scripting",
        "history",
        "storage"
    ],
    "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
    ]
}